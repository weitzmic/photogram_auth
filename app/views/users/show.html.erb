<div class="page-header">
  <h3><%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @user.username %></dd>
      <dt>User Photos</dt>
      <% @user.photos.each do |photo| %>
    <tr>
    	<td><%= photo.caption %></td>
    	<td><%= photo.image %></td>
    </tr>
    <% end %>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>

    </div>

  </div>
</div>
